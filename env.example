# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_SOCKET_URL=http://localhost:3001

# Authentication Configuration
VITE_JWT_STORAGE_KEY=ai_story_auth_token
VITE_REFRESH_TOKEN_KEY=ai_story_refresh_token
VITE_REMEMBER_ME_KEY=ai_story_remember_me

# App Configuration
VITE_APP_NAME=AI Story Generator
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Transform your stories with AI-powered audio and image generation

# Feature Flags
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_ENABLE_EMAIL_VERIFICATION=true
VITE_ENABLE_TWO_FACTOR_AUTH=false

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.txt,.doc,.docx
VITE_UPLOAD_CHUNK_SIZE=1024

# Real-time Configuration
VITE_SOCKET_RECONNECTION_ATTEMPTS=5
VITE_SOCKET_RECONNECTION_DELAY=1000
VITE_SOCKET_TIMEOUT=20000

# Analytics and Monitoring
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=

# Development Configuration
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# External Services (Optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_PORT=3008